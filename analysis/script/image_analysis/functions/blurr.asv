function [ contrast ] = blurr( input_image,threashold )
% input must be GRB
x=mean(input_image,3);  % brightness
y=fft2(x);
z=fftshift(y);

imagesc(abs(z).^2/numel(z)>threashold)
n=size(z,1);
m=size(z,2);
       
   
[kx_index, ky_index] = find(abs(z).^2/numel(z)>threashold);

kx_index_unique=unique(kx_index);

ky_index_unique=unique(ky_index);

is_x=1:n;
is_y=1:m;

ks_x=(is_x-n/2)/n/2;
ks_y=(is_y-m/2)/m/2;

max(ks_x(kx_index_unique))




end

